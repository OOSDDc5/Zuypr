<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="View.Pages.Settings">

    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="Center">

            <Label
                Margin="0,0,0,20"
                Text="Filteren"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

                        <Label
                Text="Filter age"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="24"
                HorizontalOptions="Center" />

            <Grid HorizontalOptions="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="180" />
                </Grid.ColumnDefinitions>

                <StackLayout Grid.Column="0">
                    <Label
                    Text="Minimum age:"
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="16"
                    Margin="20"
                    HorizontalOptions="Center" />

                    <Entry
                        Keyboard="Numeric"
                        x:Name="MinAge"
                        Placeholder="0"
                        WidthRequest="10"
                        MaxLength="3" />

                </StackLayout>

                <StackLayout Grid.Column="1">
                    <Label
                    Grid.Column="1"
                    Text="Maximum age:"
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="16"
                    Margin="20"
                    HorizontalOptions="Center" />

                    <Entry
                    Keyboard="Numeric"
                    x:Name="MaxAge"
                    Placeholder="100"
                    WidthRequest="20"
                    MaxLength="3" />
                </StackLayout>
            </Grid>

            <Label
                Text="Filter Cities"
                Margin="0,20,0,0"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="24"
                HorizontalOptions="Center" />

            <Picker Margin="0,20,0,0" Title="Select a city you want to zuyp in" WidthRequest="300" HorizontalTextAlignment="Center">
                <Picker.Items>
                    <x:String>Baboon</x:String>
                    <x:String>Capuchin Monkey</x:String>
                    <x:String>Blue Monkey</x:String>
                    <x:String>Squirrel Monkey</x:String>
                    <x:String>Golden Lion Tamarin</x:String>
                    <x:String>Howler Monkey</x:String>
                    <x:String>Japanese Macaque</x:String>
                </Picker.Items>
            </Picker>
            
                <Label
                Text="Account settings"
                Margin="0,50,0,0"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">

                <Button
                Margin="0,20,0,0"
                Text="Delete account"
                HorizontalOptions="Center" />

                <Button
                Margin="0,20,0,0"
                Text="Change password"
                HorizontalOptions="Center" />

                <Button
                Margin="0,20,0,0"
                Text="Logout"
                Clicked="Logout"
                HorizontalOptions="Center" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
